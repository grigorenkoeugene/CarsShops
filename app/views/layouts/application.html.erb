<!DOCTYPE html>
<html>
  <head>
    <title>CarShop</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <%= link_to "cars", cars_path%>
    <%= link_to "shops", shops_path%>
    <% if @current_user %>
      welcom, <%= @current_user.first_name %>
      <%= button_to "logout", logout_user_path, method: :delete%>
    <% else %>
      <%= link_to "register", sign_up_user_path%>
      <%= link_to "login", sign_in_user_path%>
    <%end%>
    <%= yield %>
  </body>
</html>
